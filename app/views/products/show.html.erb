<h1><%=@product.name%></h1>

<h3><%= @product.sale_method %></h3>
<h4><%=@product.description%></h4>
<br/>
<h5>Price: $<%=@product.price%></h5>
<h5>Tax: <%= @product.tax %></h5>
<h5>Total: <strong><%= @product.total %></strong></h5>
<h5><%=  @product.supplier.name%></h5>

<%= form_tag '/orders', method: :post do %>
	<div>
		<%= label_tag "Checkout" %>
		<%= text_field_tag :quantity %>
	</div>
	<div>
		<%= label_tag "Product ID" %>
		<%= text_field_tag :product_id %>
	</div>
	<%= submit_tag "Buy Now!" %>
<% end %>

 
